{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "app/**/*.ts",
        "e2e-tests/**/*.ts",
        "scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "app/bower_components",
        "**/*.spec.ts"
    ]
}